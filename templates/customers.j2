<html>
<head>
    <title>Customers</title>
</head>
<body>
    <h1>Customers</h1>
    [ <a href="/">Home</a> |  <a href="/cars">Cars</a> | <a href="/recalls">Recalls</a> | <a href="/customers">Customers</a> | <a href="/customers_vehicles">Customers' Vehicles</a>]
    <table border="1" cellpadding="5">
    <thead>
    <tr>
        <th></th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Email</th>

    </tr>
    <tbody>
    {% for customer in customers %}
    <tr>
        <td><a href="edit_customer/{{customer.customerID}}">Edit</a></td>
        <td>{{customer['firstName']}}</td>
        <td>{{customer['lastName']}}</td>
        <td>{{customer['phoneNumber']}}</td>
        <td>{{customer['email']}}</td>
    </tr>
    {% endfor %}
    </table>

    <p></p>
    {% if error %}
        <div class="error-msg">{{error}}</div>
    {% endif %}
    <form method="post" id="addCustomer" action ="/customers">
        <legend><strong>Add a Customer</strong></legend>
            <fieldset class="fields">
                <label> First Name </label> <input type="text" name="firstName">
                <label> Last Name </label> <input type="text" name="lastName">
                <label> Phone Number </label> <input type="text" name="phoneNumber">
                <label> Email </label> <input type="text" name="email">
            </fieldset>
            <input class="btn" type="submit" id="addCustomer" name="addCustomer" value="Add a Customer">
    </form> <!--add new customer-->


</body>
</html>